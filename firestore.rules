service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read and write access to authenticated users based on their roles
    match /chamas/{chamaId} {
      allow read, write: if request.auth != null &&
        (request.auth.token.role == 'admin' || request.auth.token.role == 'member');
    }

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

match /storage/{bucket}/files/{fileId} {
      allow read, write: if request.auth != null &&
        (request.auth.token.role == 'admin' || request.auth.token.role == 'member');
    }
